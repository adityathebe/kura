h3 Top Questions
ul.list-group.question_list_group
    each question in questions
        a(href = '/questions/' + question._id)
            li.list-group-item.question_list  #{question.title}

h3 Subjects
br     
each tag in tags
    span.badge 
        small #{tag.name}

hr
h3 Top Users
br
ul.list-group
    each user in users
        li.list-group-item 
            <a href='/user/#{user.username}'> #{user.username} </a>