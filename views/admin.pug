extends layout

block content
    .jumbotron
        h1(style="text-align: center") Admin Panel
    hr
    .row
        .col-md-8
            h3 Statistics
            hr
            .row
                .col-md-6
                    .well
                        h4 #{questions.length} questions asked
                .col-md-6
                    .well
                        h4 #{subjects.length} Subjects 
            .well               
                h4 #{users.length} users
                .progress
                    .progress-bar.progress-bar-success.progress-bar-striped(role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:"+users.length+'%')
            hr

        .col-md-4
            h3 Add Subject
            hr
            form(method='POST', action='/admin')
                #form-group
                    label Subject Name
                    input.form-control(type=text, name='name')
                    br
                #form-group
                    label Stream
                    select.form-control(type=text, name='stream')
                        option Computer Science
                        option Computer Engineering
                        option Mechanical Engineering
                        option Civil Engineering
                    br
                #form-group
                    label Year
                    select.form-control(type=text, name='year')
                        option 1
                        option 2
                        option 3
                        option 4
                    br
                #form-group
                    label Semester
                    select.form-control(type=text, name='semester')
                        option 1
                        option 2
                    br
                    input.btn.btn-success(type='submit', value='Save')
